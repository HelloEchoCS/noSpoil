<div class="d-flex w-50">
  <form action="/product/<%= params['product_id'] %>/edit" method="post">
    <div class="mb-3">
      <label for="product_name" class="form-label">Product Name</label>
      <input name="product_name" id="product_name" type="text" class="form-control" value="<%= params['product_name'] || @product.name %>" required>
    </div>
    <div class="mb-3">
      <label for="unit" class="form-label">Unit</label>
      <input name="unit" type="text" class="form-control" value="<%= params['unit'] || @product.unit %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>

<% content_for :header_title do %>
  <div class="py-3">
    <h3>Edit Product</h3>
  </div>
<% end %>