<div class="d-flex w-50">
  <form action="/product/add" method="post">
    <div class="mb-3">
      <label for="product_name" class="form-label">Product Name</label>
      <input name="product_name" id="product_name" type="text" class="form-control" value="<%= params['product_name'] %>" required>
    </div>
    <div class="mb-3">
      <label for="unit" class="form-label">Unit</label>
      <input name="unit" type="text" class="form-control" value="<%= params['unit'] %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
  </form>
</div>

<% content_for :header_title do %>
  <div class="py-3">
    <h3>New Product</h3>
  </div>
<% end %>