<div class="d-flex w-50">
  <form action="/stock/item/<%= params['item_id'] %>/save" method="post">
    <div class="mb-3">
      <label for="product" class="form-label">Product</label>
      <select name="product-id" class="form-select">
        <% @products.each do |product| %>
          <option value="<%= product.id %>" <%== 'selected' if pre_fill_product_name?(@item, product) %>><%= product.name %></option>
        <% end %>
      </select>
    </div>
    <div class="mb-3">
      <label for="quantity" class="form-label">Quantity</label>
      <input name="quantity" type="number" step="any" min="1" class="form-control" value="<%== @item.quantity if @item %>" required>
    </div>
    <div class="mb-3">
      <label for="best-before-date" class="form-label">Best Before</label>
      <input name="best-before-date" type="date" class="form-control" id="best-before-date" value="<%== @item.bbd if @item %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>


<% content_for :header_title do %>
  <div class="py-3">
    <h3>Edit Item</h3>
  </div>
<% end %>